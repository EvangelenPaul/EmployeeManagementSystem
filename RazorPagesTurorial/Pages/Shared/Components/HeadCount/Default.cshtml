@{
}

@model IEnumerable<DeptHeadCount>

<h3>Employee Head Count</h3>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Department</th>
            <th>Head Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var deptHeadCount in Model)
            {
                <tr>
                    <td>
                        @deptHeadCount.Department
                    </td>
                    <td>
                        @deptHeadCount.Count
                    </td>
                </tr>
            }
    </tbody>
</table>
