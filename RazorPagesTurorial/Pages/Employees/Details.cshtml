@page "/employees/view/{id:min(1)}"
@model RazorPagesTurorial.Pages.Employees.DetailsModel
@{
    ViewData["Title"] = "Details";
    var photPath = "~/images/" + (Model.Employee.Photopath ?? "noImage.png");
}

<div class="row justify-content-center m-3">
    <div class="row justify-content-center m-3">
        @if (Model.Message != null)
            {
                <div class="col-sm-8">
                    <div class="alert alert-primary">
                        @Model.Message
                    </div>
                </div>
            }
    </div>

    <div class="col-sm-8">
        <vc:head-count department-name="@Model.Employee.Department"></vc:head-count>
    </div>
    
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photPath" asp-append-version="true" />
                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Department: @Model.Employee.Department</h4>

            </div>

            <div class="card-footer text-center">
                <a asp-page="index" class="btn btn-primary">Back</a>
                <a asp-page="/Employees/Edit" asp-route-ID="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-page="/Employees/Delete" asp-route-ID="@Model.Employee.Id" class="btn btn-danger m-1">Delete</a>

            </div>
        </div>
    </div>

</div>